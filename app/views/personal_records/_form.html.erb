<div class="form-container">
<%= form_for @personal_record do |f|  %>
<%= form_error_tag (@personal_record) %>
  <%= f.text_field :movement_id, value: @personal_record.movement_id, hidden: true %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: 'form-control'%>
    <%= error_tag(@personal_record, :date) %>
  </div>
   <div class="form-group">
    <%= f.label :weight %>
    <%= f.number_field :weight, class: 'form-control' %>
    <%= error_tag(@personal_record, :weight) %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-info btn-block' %>
  </div>
<% end %>
</div>
